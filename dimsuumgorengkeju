const testimonials = [
  { name: "Kak Dinda", text: "Sumpah ini kejunya lumer banget! Luarnya crispy parah.", role: "Food Vlogger" },
  { name: "Budi Santoso", text: "Cocok buat temen ngerjain tugas. Murah tapi rasanya premium.", role: "Mahasiswa" },
  { name: "Ibu Ani", text: "Anak-anak saya suka banget, praktis tinggal pesen lewat WA.", role: "Ibu Rumah Tangga" }
];

// --- Main App Component ---

export default function App() {
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [cart, setCart] = useState({});
  const [scrolled, setScrolled] = useState(false);
  
  // AI State
  const [aiInput, setAiInput] = useState('');
  const [aiResponse, setAiResponse] = useState('');
  const [isAiLoading, setIsAiLoading] = useState(false);
  const apiKey = ""; // API Key handled by environment

  // Handle Scroll Effect
  useEffect(() => {
    const handleScroll = () => {
      setScrolled(window.scrollY > 50);
    };
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  const addToCart = (product) => {
    setCart(prev => ({
      ...prev,
      [product.id]: (prev[product.id] || 0) + 1
    }));
  };

  const cartTotalItems = Object.values(cart).reduce((a, b) => a + b, 0);

  const handleWhatsAppOrder = () => {
    let message = "Halo Kak! Mau pesen Dimsum Goreng Keju dong:%0A";
    Object.keys(cart).forEach(id => {
      const product = products.find(p => p.id === parseInt(id));
      message += `- ${product.name} (${cart[id]}x)%0A`;
    });
    message += "%0A*Total items:* " + cartTotalItems;
    window.open(`https://wa.me/6281234567890?text=${message}`, '_blank');
  };

  // --- Gemini API Function ---
  const handleAiRecommendation = async () => {
    if (!aiInput.trim()) return;
    
    setIsAiLoading(true);
    setAiResponse('');
    
    const systemPrompt = `You are a funny, slang-using Indonesian street food assistant for a brand called 'Dimsum Goreng Keju'. 
    Your tone is 'gaul', friendly, slightly cheeky, and uses emojis.
    
    Menu Items:
    1. Paket Jomblo (3 Pcs + Sauce) - Good for single people, light snacks, feeling lonely.
    2. Paket Ngemil (5 Pcs + Extra Cheese) - Good for working, studying, gaming.
    3. Party Box (12 Pcs) - Good for hanging out, celebration, family.
    4. Dimsum Mentai (4 Pcs Mentai) - Good for savory lovers, wanting something fancy.
  
    User's Mood/Situation: "${aiInput}"
    
    Task: Recommend ONE menu item based on their mood. Explain why in 1-2 fun sentences using Indonesian slang (jaksel style is okay). Mention "Keju Lumer" or "Crispy".
    Output format: Just the recommendation text. No markdown formatting.`;
  
    try {
      const response = await fetch(
        `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`,
        {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            contents: [{ parts: [{ text: systemPrompt }] }]
          })
        }
      );
      
      const data = await response.json();
      if (data.error) {
         setAiResponse("Yah, DimsumBot lagi pusing kebanyakan micin. Coba lagi nanti ya! üòµ‚Äçüí´");
      } else {
         setAiResponse(data.candidates?.[0]?.content?.parts?.[0]?.text || "Maaf, coba ulangi lagi ya bestie!");
      }
    } catch (error) {
      setAiResponse("Yah, koneksi putus nih. Coba lagi ya! ü•∫");
    } finally {
      setIsAiLoading(false);
    }
  };

  return (
    <div className="min-h-screen bg-yellow-50 text-gray-800 overflow-x-hidden selection:bg-yellow-300">
      <style>{fonts}</style>

      {/* Floating WhatsApp Button */}
      <button 
        onClick={handleWhatsAppOrder}
        className="fixed bottom-6 right-6 z-50 bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-lg transition-transform hover:scale-110 flex items-center gap-2 animate-bounce"
        aria-label="Chat WhatsApp"
      >
        <Phone className="w-6 h-6" />
        <span className="font-bold hidden md:inline">Order via WA</span>
      </button>

      {/* Navbar */}
      <nav className={`fixed w-full z-40 transition-all duration-300 ${scrolled ? 'bg-white/90 backdrop-blur-md shadow-sm py-3' : 'bg-transparent py-5'}`}>
        <div className="container mx-auto px-6 flex justify-between items-center">
          <div className="flex items-center gap-2">
            <div className="w-10 h-10 bg-yellow-400 rounded-full flex items-center justify-center border-2 border-orange-500">
              <span className="text-2xl">üßÄ</span>
            </div>
            <span className="text-2xl font-bold fun-font text-orange-600 tracking-tight">Dimsum<span className="text-yellow-500">Keju</span></span>
          </div>

          {/* Desktop Menu */}
          <div className="hidden md:flex items-center gap-8 font-semibold text-gray-600">
            <a href="#home" className="hover:text-orange-500 transition-colors">Home</a>
            <a href="#ai-recommender" className="text-purple-600 hover:text-purple-700 transition-colors flex items-center gap-1 font-bold"><Sparkles size={16} /> DimsumBot</a>
            <a href="#menu" className="hover:text-orange-500 transition-colors">Menu</a>
            <a href="#about" className="hover:text-orange-500 transition-colors">Cerita Kita</a>
            <a href="#testi" className="hover:text-orange-500 transition-colors">Review</a>
            
            <button 
              onClick={() => document.getElementById('menu').scrollIntoView({behavior: 'smooth'})}
              className="bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded-full font-bold transition-all transform hover:scale-105 shadow-md flex items-center gap-2"
            >
              Order Now <ShoppingCart size={18} />
              {cartTotalItems > 0 && (
                <span className="bg-white text-orange-600 text-xs w-5 h-5 flex items-center justify-center rounded-full">
                  {cartTotalItems}
                </span>
              )}
            </button>
          </div>

          {/* Mobile Toggle */}
          <button className="md:hidden text-gray-700" onClick={() => setIsMenuOpen(!isMenuOpen)}>
            {isMenuOpen ? <X size={28} /> : <Menu size={28} />}
          </button>
        </div>

        {/* Mobile Menu Dropdown */}
        {isMenuOpen && (
          <div className="md:hidden absolute top-full left-0 w-full bg-white shadow-lg py-4 px-6 flex flex-col gap-4 font-semibold">
            <a href="#home" onClick={() => setIsMenuOpen(false)}>Home</a>
            <a href="#ai-recommender" onClick={() => setIsMenuOpen(false)} className="text-purple-600 flex items-center gap-2"><Sparkles size={16}/> DimsumBot</a>
            <a href="#menu" onClick={() => setIsMenuOpen(false)}>Menu</a>
            <a href="#about" onClick={() => setIsMenuOpen(false)}>Cerita Kita</a>
            <button 
              onClick={handleWhatsAppOrder}
              className="bg-green-500 text-white py-2 rounded-lg flex justify-center items-center gap-2"
            >
              Chat WhatsApp <Phone size={18} />
            </button>
          </div>
        )}
      </nav>

      {/* Hero Section */}
      <section id="home" className="pt-32 pb-20 px-6 relative overflow-hidden">
        {/* Decorative Background Elements */}
        <div className="absolute top-20 right-0 w-64 h-64 bg-yellow-200 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
        <div className="absolute top-40 -left-10 w-72 h-72 bg-orange-200 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>

        <div className="container mx-auto grid md:grid-cols-2 gap-12 items-center relative z-10">
          <div className="space-y-6">
            <div className="inline-block bg-orange-100 text-orange-600 px-4 py-2 rounded-full font-bold text-sm tracking-wide">
              üöÄ #1 Street Food Premium di Kota
            </div>
            <h1 className="text-5xl md:text-7xl font-bold text-gray-900 leading-tight">
              Dimsum <span className="text-orange-500 inline-block transform -rotate-2">Crispy</span>, <br/>
              Keju <span className="text-yellow-500 underline decoration-wavy decoration-orange-300">Lumer!</span>
            </h1>
            <p className="text-lg text-gray-600 md:w-3/4 leading-relaxed">
              Nikmati sensasi dimsum goreng renyah dengan isian daging full dan lelehan keju mozzarella yang pecah di mulut. Awas ketagihan!
            </p>
            <div className="flex flex-col sm:flex-row gap-4 pt-4">
              <a href="#menu" className="bg-orange-500 text-white px-8 py-4 rounded-full font-bold text-lg shadow-lg hover:bg-orange-600 transition-all transform hover:-translate-y-1 flex items-center justify-center gap-2">
                Pesan Sekarang <ChevronRight />
              </a>
              <a href="#about" className="bg-white text-orange-500 border-2 border-orange-100 px-8 py-4 rounded-full font-bold text-lg hover:bg-orange-50 transition-all flex items-center justify-center">
                Lihat Menu
              </a>
            </div>
            
            <div className="flex items-center gap-4 pt-6 text-sm font-semibold text-gray-500">
              <div className="flex items-center gap-1">
                <CheckCircle className="text-green-500 w-5 h-5" /> Halal 100%
              </div>
              <div className="flex items-center gap-1">
                <CheckCircle className="text-green-500 w-5 h-5" /> Fresh Made
              </div>
              <div className="flex items-center gap-1">
                <CheckCircle className="text-green-500 w-5 h-5" /> Premium Ingredients
              </div>
            </div>
          </div>

          {/* Hero Image / Visual */}
          <div className="relative flex justify-center">
            {/* Abstract representation of the product for demo purposes */}
            <div className="w-80 h-80 md:w-96 md:h-96 bg-yellow-400 blob-shape flex items-center justify-center relative shadow-2xl border-4 border-white">
              <div className="text-center text-white">
                <span className="text-9xl drop-shadow-lg filter">ü•ü</span>
                <div className="absolute -bottom-6 -right-6 bg-white text-orange-600 px-6 py-3 rounded-2xl shadow-xl transform rotate-6">
                  <span className="font-bold text-2xl fun-font">Cuma 15k!</span>
                </div>
              </div>
            </div>
            {/* Flying Elements */}
            <div className="absolute top-10 right-10 text-4xl animate-bounce delay-100">üßÄ</div>
            <div className="absolute bottom-10 left-10 text-4xl animate-bounce delay-300">üî•</div>
          </div>
        </div>
      </section>

      {/* --- AI SECTION START --- */}
      <section id="ai-recommender" className="py-16 bg-gradient-to-r from-purple-100 to-indigo-50 relative overflow-hidden">
        <div className="container mx-auto px-6 relative z-10">
          <div className="bg-white rounded-3xl shadow-xl p-8 md:p-12 border-4 border-purple-200 flex flex-col md:flex-row gap-12 items-center">
            
            <div className="flex-1 space-y-6">
              <div className="inline-block bg-purple-200 text-purple-800 px-4 py-1 rounded-full text-xs font-bold uppercase tracking-wider flex items-center gap-2">
                <Sparkles size={14} /> Powered by Gemini AI
              </div>
              <h2 className="text-3xl md:text-4xl font-bold text-gray-800 fun-font">
                Bingung Mau <span className="text-purple-600">Makan Apa?</span>
              </h2>
              <p className="text-gray-600">
                Curhatin aja mood kamu sekarang ke <strong>DimsumBot</strong>! Lagi galau? Lagi happy? Atau lagi bokek? Biar kami pilihin menu yang pas buat hati (dan dompet) kamu. ‚ú®
              </p>
              
              <div className="space-y-4">
                <div className="relative">
                  <input 
                    type="text" 
                    value={aiInput}
                    onChange={(e) => setAiInput(e.target.value)}
                    placeholder="Contoh: Lagi ngerjain skripsi pusing banget..."
                    className="w-full bg-gray-50 border-2 border-gray-200 rounded-xl px-6 py-4 focus:outline-none focus:border-purple-400 transition-colors"
                    onKeyPress={(e) => e.key === 'Enter' && handleAiRecommendation()}
                  />
                  <button 
                    onClick={handleAiRecommendation}
                    disabled={isAiLoading}
                    className="absolute right-2 top-2 bottom-2 bg-purple-600 hover:bg-purple-700 text-white px-6 rounded-lg font-bold transition-colors disabled:opacity-50 flex items-center gap-2"
                  >
                    {isAiLoading ? 'Mikir...' : <><span className="hidden md:inline">Kirim</span> <Send size={18} /></>}
                  </button>
                </div>
                <div className="flex gap-2 text-xs text-gray-400">
                  <span>Coba:</span>
                  <button onClick={() => setAiInput("Lagi patah hati nih kak")} className="hover:text-purple-600 underline decoration-dashed">"Patah hati"</button>
                  <button onClick={() => setAiInput("Mau nongkrong rame-rame")} className="hover:text-purple-600 underline decoration-dashed">"Nongkrong"</button>
                  <button onClick={() => setAiInput("Lapar tapi mager")} className="hover:text-purple-600 underline decoration-dashed">"Mager"</button>
                </div>
              </div>
            </div>

            <div className="flex-1 w-full">
              <div className="bg-gray-50 rounded-2xl p-6 md:p-8 min-h-[200px] flex items-center justify-center border-2 border-dashed border-gray-300 relative">
                {aiResponse ? (
                  <div className="flex gap-4 items-start animate-fade-in-up">
                    <div className="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
                      <span className="text-2xl">ü§ñ</span>
                    </div>
                    <div>
                      <h4 className="font-bold text-purple-700 mb-1 text-lg">DimsumBot Bilang:</h4>
                      <p className="text-gray-700 text-lg leading-relaxed">"{aiResponse}"</p>
                    </div>
                  </div>
                ) : (
                  <div className="text-center text-gray-400">
                    <MessageCircle className="mx-auto mb-2 w-12 h-12 opacity-20" />
                    <p>Jawaban DimsumBot bakal muncul di sini...</p>
                  </div>
                )}
              </div>
            </div>

          </div>
        </div>
      </section>
      {/* --- AI SECTION END --- */}

      {/* Menu Section (WooCommerce Style) */}
      <section id="menu" className="py-20 bg-white pattern-grid">
        <div className="container mx-auto px-6">
          <div className="text-center mb-16">
            <h2 className="text-4xl font-bold text-gray-800 mb-4 fun-font">Menu Favorit <span className="text-orange-500">Netizen</span></h2>
            <p className="text-gray-500 max-w-xl mx-auto">Pilih paket kebahagiaanmu hari ini. Dijamin fresh, panas, dan krispi saat sampai di tanganmu.</p>
          </div>

          <div className="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            {products.map((product) => (
              <div key={product.id} className="group bg-white rounded-3xl p-4 shadow-lg hover:shadow-xl transition-all border border-gray-100 flex flex-col relative overflow-hidden">
                {/* Badge */}
                <div className="absolute top-4 left-4 bg-yellow-400 text-yellow-900 text-xs font-bold px-3 py-1 rounded-full z-10">
                  {product.tag}
                </div>
                
                {/* Product Image Placeholder */}
                <div className={`h-48 rounded-2xl ${product.imageColor} mb-4 flex items-center justify-center relative group-hover:scale-105 transition-transform duration-500`}>
                  <span className="text-6xl drop-shadow-md">ü•ü</span>
                  <button className="absolute bottom-3 right-3 bg-white p-2 rounded-full shadow-md text-red-400 hover:text-red-500 transition-colors">
                    <Heart size={20} fill="currentColor" />
                  </button>
                </div>

                {/* Content */}
                <div className="flex-1 flex flex-col">
                  <div className="flex justify-between items-start mb-2">
                    <h3 className="text-xl font-bold text-gray-800 leading-tight">{product.name}</h3>
                    <div className="flex items-center gap-1 text-yellow-500 text-sm font-bold">
                      <Star size={14} fill="currentColor" /> {product.rating}
                    </div>
                  </div>
                  <p className="text-gray-500 text-sm mb-4 flex-1">{product.description}</p>
                  
                  <div className="flex items-center justify-between mt-auto">
                    <span className="text-lg font-bold text-orange-600">
                      Rp {product.price.toLocaleString('id-ID')}
                    </span>
                    <button 
                      onClick={() => addToCart(product)}
                      className="bg-gray-900 text-white p-2 rounded-xl hover:bg-orange-500 transition-colors flex items-center gap-2 group-active:scale-95"
                    >
                      <Plus size={20} />
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>

          <div className="mt-12 text-center">
            <p className="text-gray-500 mb-4">Mau tambah saus keju extra?</p>
            <button className="text-orange-500 font-bold border-b-2 border-orange-500 hover:text-orange-600 transition-colors">
              Lihat Menu Tambahan
            </button>
          </div>
        </div>
      </section>

      {/* USP Section */}
      <section className="py-20 bg-orange-500 text-white relative overflow-hidden">
        <div className="absolute inset-0 pattern-grid opacity-10"></div>
        <div className="container mx-auto px-6 text-center relative z-10">
          <div className="grid md:grid-cols-3 gap-8 divide-y md:divide-y-0 md:divide-x divide-orange-400/50">
            <div className="p-4">
              <div className="bg-white/20 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl">
                üöÄ
              </div>
              <h3 className="text-xl font-bold mb-2">Siap Antar</h3>
              <p className="text-orange-100 text-sm">Pengiriman cepat lewat ojol instant atau kurir toko.</p>
            </div>
            <div className="p-4">
              <div className="bg-white/20 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl">
                üßÄ
              </div>
              <h3 className="text-xl font-bold mb-2">Keju Premium</h3>
              <p className="text-orange-100 text-sm">Menggunakan mozzarella impor yang mulurrr banget.</p>
            </div>
            <div className="p-4">
              <div className="bg-white/20 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl">
                üç§
              </div>
              <h3 className="text-xl font-bold mb-2">Daging Asli</h3>
              <p className="text-orange-100 text-sm">Tanpa pengawet, full daging ayam & udang segar.</p>
