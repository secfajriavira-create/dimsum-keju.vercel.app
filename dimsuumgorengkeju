import React, { useState, useEffect } from 'react';
import { ShoppingCart, Menu, X, Star, Phone, MapPin, Instagram, Heart, ChevronRight, CheckCircle, Plus, Sparkles, Send, MessageCircle } from 'lucide-react';

// --- Components & Styles ---

const fonts = `
  @import url('https://fonts.googleapis.com/css2?family=Fredoka:wght@300;400;500;600;700&family=Nunito:wght@400;600;700;800&display=swap');
  
  body {
    font-family: 'Nunito', sans-serif;
  }
  
  h1, h2, h3, h4, h5, h6, .fun-font {
    font-family: 'Fredoka', sans-serif;
  }

  .blob-shape {
    border-radius: 42% 58% 70% 30% / 45% 45% 55% 55%;
    animation: blob-bounce 10s infinite ease-in-out alternate;
  }

  @keyframes blob-bounce {
    0% { border-radius: 42% 58% 70% 30% / 45% 45% 55% 55%; transform: translateY(0px); }
    100% { border-radius: 58% 42% 30% 70% / 55% 55% 45% 45%; transform: translateY(-20px); }
  }
  
  .cheese-melt {
    background: linear-gradient(180deg, #FCD34D 0%, #F59E0B 100%);
  }

  .pattern-grid {
    background-image: radial-gradient(#F59E0B 1px, transparent 1px);
    background-size: 20px 20px;
  }
`;

// --- Mock Data ---

const products = [
  {
    id: 1,
    name: "Paket Jomblo",
    description: "3 Pcs Dimsum Goreng + Saus Keju Special",
    price: 15000,
    rating: 4.8,
    imageColor: "bg-orange-100",
