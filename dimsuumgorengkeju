              <ul className="space-y-2 text-gray-400 text-sm">
                <li className="flex justify-between"><span>Senin - Jumat</span> <span>10:00 - 22:00</span></li>
                <li className="flex justify-between"><span>Sabtu - Minggu</span> <span>09:00 - 23:00</span></li>
              </ul>
            </div>
          </div>
          
          <div className="border-t border-gray-800 pt-8 text-center text-gray-500 text-xs">
            <p>&copy; {new Date().getFullYear()} Dimsum Goreng Keju. UMKM Indonesia Maju.</p>
          </div>
        </div>
      </footer>
    </div>
  );
}
