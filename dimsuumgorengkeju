              <div key={i} className="bg-white p-8 rounded-3xl shadow-sm border border-yellow-100 relative">
                <div className="absolute -top-4 left-8 text-6xl text-yellow-200 font-serif">"</div>
                <p className="text-gray-600 italic mb-6 relative z-10">{t.text}</p>
                <div className="flex items-center gap-4">
